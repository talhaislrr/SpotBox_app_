{
  "expo": {
    "name": "SpotBox",
    "slug": "spotbox",
    "version": "1.0.0",
    "sdkVersion": "53.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SpotBox konum tabanlı müzik keşfi için konumunuzu kullanır."
      },
      "bundleIdentifier": "com.anonymous.spotbox"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.anonymous.spotbox"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "permissions": [
      "LOCATION",
      "CAMERA",
      "CAMERA_ROLL"
    ],
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Bu uygulama müzik keşfetmek için konum bilgisini kullanır.",
          "locationWhenInUsePermission": "Bu uygulama müzik keşfetmek için konum bilgisini kullanır."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Bu uygulama müzik içerikleri için fotoğraf çekmek amacıyla kamera kullanır.",
          "microphonePermission": "Bu uygulama müzik içerikleri için ses kaydetmek amacıyla mikrofon kullanır."
        }
      ],
      [
        "@maplibre/maplibre-react-native",
        {
          "iosLocationUsageDescription": "SpotBox harita üzerinde konumunuzu göstermek için yer bilgisine ihtiyaç duyar."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "351953b3-1ad5-46f7-b825-976d836489b5"
      }
    }
  }
}
